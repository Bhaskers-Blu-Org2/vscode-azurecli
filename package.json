{
  "name": "azurecli",
  "displayName": "Azure CLI",
  "description": "Azure CLI Tools",
  "version": "0.0.1",
  "publisher": "vscode",
  "engines": {
    "vscode": "^1.11.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:sha"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "sha",
        "aliases": [
          "Bash Azure Scrapbook",
          "sha"
        ],
        "extensions": [
          ".sha"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sha",
        "scopeName": "source.sha",
        "path": "./syntaxes/sha.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "ms-azurecli.runLineInEditor",
        "title": "Run Line and Show in Editor"
      }
    ],
    "keybindings": [
      {
        "command": "workbench.action.terminal.runSelectedText",
        "key": "ctrl+'",
        "mac": "cmd+'",
        "when": "editorTextFocus"
      },
      {
        "command": "ms-azurecli.runLineInEditor",
        "key": "ctrl+shift+'",
        "mac": "cmd+shift+'",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^7.0.13",
    "mocha": "^2.3.3",
    "tslint": "^5.1.0",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "azure-arm-resource": "^2.0.0-preview",
    "deep-equal": "^1.0.1",
    "ms-rest": "^2.0.0"
  }
}
