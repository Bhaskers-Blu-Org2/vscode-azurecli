{
  "name": "azurecli",
  "displayName": "Azure CLI Tools",
  "description": "Tools for developing and running commands of the Azure CLI.",
  "version": "0.1.0",
  "icon": "images/azure_icon.png",
  "publisher": "ms-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-azurecli.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-azurecli/issues"
  },
  "engines": {
    "vscode": "^1.11.0"
  },
  "categories": [
    "Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:azcli"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "azcli",
        "aliases": [
          "Azure CLI Scrapbook",
          "azcli"
        ],
        "extensions": [
          ".azcli"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "azcli",
        "scopeName": "source.azcli",
        "path": "./syntaxes/azcli.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "ms-azurecli.runLineInTerminal",
        "title": "Run Line in Terminal"
      },
      {
        "command": "ms-azurecli.runLineInEditor",
        "title": "Run Line in Editor"
      },
      {
        "command": "ms-azurecli.toggleLiveQuery",
        "title": "Toggle Live Query"
      }
    ],
    "keybindings": [
      {
        "command": "ms-azurecli.runLineInTerminal",
        "key": "ctrl+'",
        "mac": "cmd+'",
        "when": "editorTextFocus && editorLangId == 'azcli'"
      },
      {
        "command": "ms-azurecli.runLineInEditor",
        "key": "ctrl+shift+'",
        "mac": "cmd+shift+'",
        "when": "editorTextFocus && editorLangId == 'azcli'"
      },
      {
        "command": "ms-azurecli.toggleLiveQuery",
        "key": "ctrl+;",
        "mac": "cmd+;",
        "when": "editorTextFocus && editorLangId == 'azcli'"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ms-azurecli.runLineInTerminal",
          "group": "2_run",
          "when": "editorLangId == 'azcli'"
        },
        {
          "command": "ms-azurecli.runLineInEditor",
          "group": "2_run",
          "when": "editorLangId == 'azcli'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/jmespath": "^0.15.0",
    "@types/mocha": "^2.2.32",
    "@types/node": "^7.0.13",
    "@types/opn": "^3.0.28",
    "@types/semver": "^5.3.31",
    "mocha": "^2.3.3",
    "tslint": "^5.1.0",
    "typescript": "^2.3.1",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "jmespath": "^0.15.0",
    "opn": "^5.0.0",
    "semver": "^5.3.0"
  }
}
