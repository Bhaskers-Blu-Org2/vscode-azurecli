{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bash Azure Scrapbook",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#stringsUnquoted"
		},
		{
			"include": "#stringsSingleQuoted"
		},
		{
			"include": "#stringsDoubleQuoted"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "storage.type.sha",
				"match": "\\b(az|acs|cloud|disk|group|lock|policy|role|tag|ad|component|documentdb|image|login|provider|snapshot|vm|appservice|configure|feature|iot|logout|redis|sql|vmss|account|batch|container|feedback|keyvault|network|resource|storage|list|set|create|plan|web|source-control|config|update|browse|delete)\\b"
			}]
		},
		"identifiers": {
			"patterns": [{
				"name": "variable.other.sha",
				"match": "\\s-[-[:alnum:]]+\\s"
			}]
		},
		"stringsUnquoted": {
			"patterns": [{
				"name": "string.unquoted.sha",
				"match": "(?<=^|\\s)[^\\s]+(?=\\s)"
			}]
		},
		"stringsSingleQuoted": {
			"name": "string.quoted.single.sha",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.sha",
					"match": "\\\\."
				}
			]
		},
		"stringsDoubleQuoted": {
			"name": "string.quoted.double.sha",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sha",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.hash.sha",
				"match": "\\#.*"
			}]
		}
	},
	"scopeName": "source.sha"
}