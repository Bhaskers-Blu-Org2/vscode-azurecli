{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bash Azure Scrapbook",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#stringsUnquoted"
		},
		{
			"include": "#stringsSingleQuoted"
		},
		{
			"include": "#stringsDoubleQuoted"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "storage.type.azcli",
				"match": "^([^\\s#-]-+|[^#-])+"
			}]
		},
		"identifiers": {
			"patterns": [{
				"name": "variable.other.azcli",
				"match": "-[^\\s#]*\\s*"
			}]
		},
		"stringsUnquoted": {
			"patterns": [{
				"name": "string.unquoted.azcli",
				"match": "[^\\s#]+\\s*"
			}]
		},
		"stringsSingleQuoted": {
			"name": "string.quoted.single.azcli",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.azcli",
					"match": "\\\\."
				}
			]
		},
		"stringsDoubleQuoted": {
			"name": "string.quoted.double.azcli",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.azcli",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.hash.azcli",
				"match": "\\#.*"
			}]
		}
	},
	"scopeName": "source.azcli"
}