{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Azure CLI Scrapbook",
	"patterns": [
		{
			"include": "#subcommand"
		},
		{
			"include": "#parameterName"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#parameterValueUnquoted"
		},
		{
			"include": "#parameterValueSingleQuoted"
		},
		{
			"include": "#parameterValueDoubleQuoted"
		}
	],
	"repository": {
		"subcommand": {
			"patterns": [{
				"name": "storage.type.azcli",
				"match": "^([^\\s#-]-+|[^#-])+"
			}]
		},
		"parameterName": {
			"patterns": [{
				"name": "variable.other.azcli",
				"match": "-[^\\s#]*\\s*"
			}]
		},
		"parameterValueUnquoted": {
			"patterns": [{
				"name": "string.unquoted.azcli",
				"match": "[^\\s#]+\\s*"
			}]
		},
		"parameterValueSingleQuoted": {
			"name": "string.quoted.single.azcli",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.azcli",
					"match": "\\\\."
				}
			]
		},
		"parameterValueDoubleQuoted": {
			"name": "string.quoted.double.azcli",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.azcli",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.hash.azcli",
				"match": "\\#.*"
			}]
		}
	},
	"scopeName": "source.azcli"
}